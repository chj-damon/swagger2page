{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug Extension",
      "configurations": [
        "Extension",
        "Webview"
      ],
      "presentation": {
        "order": 0
      }
    }
  ],
  "configurations": [
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "npm: dev",
      "sourceMaps": true
    },
    {
      "name": "Webview",
      "type": "node",
      "request": "attach",
      "preLaunchTask": "npm: web-dev"
    }
  ]
}
